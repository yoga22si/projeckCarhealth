<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header Text -->
    <TextView
        android:id="@+id/header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Your Consultant"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <!-- Scrollable list of consultants -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/consultant_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Consultant 1 -->
            <LinearLayout
                android:id="@+id/consultant1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/consultant1_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/dokter1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/consultant1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. John Doe"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/consultant1_specialization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Specialist in Cardiology"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/consultant1_experience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Experience: 10 years"
                        android:textSize="14sp"
                        android:textColor="#757575" />
                </LinearLayout>
            </LinearLayout>

            <!-- Consultant 2 -->
            <LinearLayout
                android:id="@+id/consultant2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:elevation="4dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/consultant2_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/dokter2"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/consultant2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Jane Smith"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
