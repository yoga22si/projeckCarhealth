                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/consultant2_experience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Experience: 8 years"
                        android:textSize="14sp"
                        android:textColor="#757575" />
                </LinearLayout>
            </LinearLayout>

