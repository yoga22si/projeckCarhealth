<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".KusionerFragment">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/navigationLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kuisioner Kesehatan"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp"/>

                <!-- Pertanyaan 1 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Berapa kali dalam seminggu Anda berolahraga?"
                    android:textSize="16sp"/>

                <RadioGroup
                    android:id="@+id/radioGroupExercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioExerciseNever"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tidak Pernah"/>

                    <RadioButton
                        android:id="@+id/radioExerciseOnce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1-2 Kali"/>

                    <RadioButton
                        android:id="@+id/radioExerciseThrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3-4 Kali"/>

                    <RadioButton
                        android:id="@+id/radioExerciseDaily"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Setiap Hari"/>
                </RadioGroup>

                <!-- Pertanyaan 2 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Apakah Anda merokok?"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"/>

                <RadioGroup
                    android:id="@+id/radioGroupSmoking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioSmokingYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ya"/>

                    <RadioButton
                        android:id="@+id/radioSmokingNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tidak"/>
                </RadioGroup>

                <!-- Pertanyaan 3 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Berapa jam Anda tidur setiap malam?"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/editTextSleepHours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jumlah jam"
                    android:inputType="number"
                    android:layout_marginTop="8dp"/>

                <!-- Pertanyaan Tambahan -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Seberapa sering Anda mengkonsumsi makanan cepat saji?"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"/>

                <RadioGroup
                    android:id="@+id/radioGroupFastFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioFastFoodNever"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tidak Pernah"/>

                    <RadioButton
                        android:id="@+id/radioFastFoodSometimes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kadang-kadang"/>

                    <RadioButton
                        android:id="@+id/radioFastFoodOften"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sering"/>

                    <RadioButton
                        android:id="@+id/radioFastFoodAlways"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sangat Sering"/>
                </RadioGroup>

                <!-- Tambahkan pertanyaan tambahan sesuai kebutuhan -->

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/navigationLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="16dp">

            <Button
                android:id="@+id/buttonPrevious"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous"
                android:visibility="gone"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/buttonNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/buttonSubmitKusioner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
